<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:onClick="acessarHome">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="174dp"
            android:layout_height="31dp"
            android:text="Senha"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/idSenhaCadastro"
            app:layout_constraintTop_toBottomOf="@+id/idEmailCadastro" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="174dp"
            android:layout_height="31dp"
            android:text="Confirmar senha"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/idSenhaConfirmar"
            app:layout_constraintTop_toBottomOf="@+id/idSenhaCadastro" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="174dp"
            android:layout_height="31dp"
            android:text="Nome de usuário"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/idNomeUsuarioCadastro"
            app:layout_constraintTop_toBottomOf="@+id/idSenhaConfirmar" />

        <EditText
            android:id="@+id/idEnderecoCadastro"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/idTelefoneCadastro"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/idTelefoneCadastro"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="174dp"
            android:layout_height="31dp"
            android:text="Apelido (Opcional)"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/idApelidoCadastro"
            app:layout_constraintTop_toBottomOf="@+id/idNomeCompletoCadastro" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="174dp"
            android:layout_height="31dp"
            android:text="Nome completo"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/idApelidoCadastro"
            app:layout_constraintTop_toBottomOf="@+id/idNomeUsuarioCadastro" />

        <EditText
            android:id="@+id/idNomeUsuarioCadastro"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/idSenhaConfirmar"
            app:layout_constraintStart_toStartOf="@+id/idSenhaConfirmar"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="174dp"
            android:layout_height="31dp"
            android:text="Qual a sua função?"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/idEnderecoCadastro"
            app:layout_constraintTop_toBottomOf="@+id/idEnderecoCadastro" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="174dp"
            android:layout_height="31dp"
            android:text="endereço"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/idEnderecoCadastro"
            app:layout_constraintTop_toBottomOf="@+id/idTelefoneCadastro" />

        <EditText
            android:id="@+id/idApelidoCadastro"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/idNomeUsuarioCadastro"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/idNomeUsuarioCadastro"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <EditText
            android:id="@+id/idNomeCompletoCadastro"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/idNomeUsuarioCadastro"
            app:layout_constraintStart_toStartOf="@+id/idNomeUsuarioCadastro"
            app:layout_constraintTop_toBottomOf="@+id/textView20" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="174dp"
            android:layout_height="31dp"
            android:text="telefone"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/idTelefoneCadastro"
            app:layout_constraintTop_toBottomOf="@+id/idApelidoCadastro" />

        <EditText
            android:id="@+id/idTelefoneCadastro"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/idApelidoCadastro"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="145dp"
            android:layout_height="38dp"
            android:text="Novo usuário"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.04000002" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="174dp"
            android:layout_height="31dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="Email"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <EditText
            android:id="@+id/idSenhaConfirmar"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/idSenhaCadastro"
            app:layout_constraintStart_toStartOf="@+id/idSenhaCadastro"
            app:layout_constraintTop_toBottomOf="@+id/textView19" />

        <EditText
            android:id="@+id/idSenhaCadastro"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/idEmailCadastro"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <Button
            android:id="@+id/button2"
            android:layout_width="200dp"
            android:layout_height="46dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:onClick="acessarLogin"
            android:text="Cadastrar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioiGroupCadastrar" />

        <RadioGroup
            android:id="@+id/radioiGroupCadastrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/textView13"
            app:layout_constraintTop_toBottomOf="@+id/textView13">

            <RadioButton
                android:id="@+id/idAgricultorCadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agricultor"
                android:textColor="#FFFFFF" />

            <RadioButton
                android:id="@+id/idAgronomoCadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agrônomo"
                android:textColor="#FFFFFF" />
        </RadioGroup>

        <EditText
            android:id="@+id/idEmailCadastro"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#F6F4F4"
            android:textColorHint="#FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>